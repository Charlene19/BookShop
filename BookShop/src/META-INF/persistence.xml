<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="BookShopPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>bookshop.PaymentOrganization</class>
    <class>bookshop.Customer</class>
    <class>bookshop.Group1</class>
    <class>bookshop.CardType</class>
    <class>bookshop.Category</class>
    <class>bookshop.PackageStatus</class>
    <class>bookshop.Employee</class>
    <class>bookshop.Permission</class>
    <class>bookshop.OrderStatus</class>
    <class>bookshop.OrderRow</class>
    <class>bookshop.ShippingOffer</class>
    <class>bookshop.Address</class>
    <class>bookshop.Package</class>
    <class>bookshop.Book</class>
    <class>bookshop.Payment</class>
    <class>bookshop.Author</class>
    <class>bookshop.Event</class>
    <class>bookshop.Vat</class>
    <class>bookshop.Keyword</class>
    <class>bookshop.Comment</class>
    <class>bookshop.Carrier</class>
    <class>bookshop.Publisher</class>
    <class>bookshop.Order1</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:sqlserver://localhost:1433;databaseName=BookShop"/>
      <property name="javax.persistence.jdbc.user" value="USER"/>
      <property name="javax.persistence.jdbc.driver" value="com.microsoft.sqlserver.jdbc.SQLServerDriver"/>
      <property name="javax.persistence.jdbc.password" value="PASSWORD"/>
    </properties>
  </persistence-unit>
</persistence>
